<resources>

    <style name="Platform.AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Platform.AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/app_bar_text_color</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/app_bar_text_color</item>
        <item name="android:lineSpacingExtra">@dimen/session_title_line_spacing</item>
    </style>

    <style name="AppTheme.ActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.TitleBarTextColor</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="AppTheme.TitleBarTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
